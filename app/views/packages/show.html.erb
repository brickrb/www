<div class="row">
  <div class="col-md-9">
    <h1> <%= @package.name %> </h1>
    <% if @package.latest_version %>
      <p> <%= @package.latest_version.description %> </p>
    <% end %>
  </div>

  <div class="col-md-3">
    <br><br>
    <div>
      <span class="glyphicon glyphicon-download-alt"></span>
      <i> brick install <%= @package.name %> </i>
      <hr>
    </div>
    <br>

    <div>
      <p>test published 1 month ago</p>
      <hr>
      <p> <%= @package.latest_version_number %> is the latest of <%= @package.versions.count %> versions</p>
      <hr>
      <p><a href="https://github.com/rails/rails">github.com/rails/rails</a></p>
      <hr>
      <% if @package.latest_version %>
        <p><b> <%= @package.latest_version.license %> </b> license</p>
      <% end %>
    </div>
    <br>

    <div>
      <p><b> Stats: </b></p>
    </div>
    <br>

    <div>
      <p><b> Dependencies: </b></p>
    </div>
    <br>

    <div>
      <p><b> Dependents: </b></p>
    </div>
  </div>
</div>
